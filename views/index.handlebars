<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 col-sm-4 offset-md-1">
            <h2>Latest Articles</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Article Title</th>
                        <th>Article Link</th>
                        <th>Article Notes</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each articles}}
                    <tr>
                        <td><p data-id={{this._id}}>{{this.title}}</p></td>
                        <td><a href="{{this.link}}" target="_blank">Read it!</a></td>
                        <td>
                            <button class="btn btn-primary" id="view-notes" type="button" data-id="{{this._id}}" data-toggle="collapse" data-target="#collapseExample"
                                aria-expanded="false" aria-controls="collapseExample">
                                View Notes
                            </button>
                            </a>
                            <div class="collapse" id="collapseExample">
                                <div class="card card-body" id="notes">
                                    <p>{{this.note}} This is filler text.</p>
                                </div>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
    </div>
</div>