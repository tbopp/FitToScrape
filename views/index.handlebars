<div class="container-fluid">
    <div class="row">
        <div class="col-md-4 col-sm-6 offset-md-2">
            <h2>Hot'n Fresh!</h2>
            <ol>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li class="burger-list">{{this.burger_name}}
                    <br><button type="button" class="btn btn-success btn-sm devour-btn" data-id="{{id}}">Eat it!</button>
                </li>
                {{/unless}}
                {{/each}}
            </ol>
        </div>
        <div class="col-md-4 col-sm-6 offset-md-2">
            <h2>Devoured!</h2>
            <ol>
                {{#each burgers}}
                {{#if this.devoured}}
                <li class="burger-list-devoured">{{this.burger_name}}
                    <br><button type="button" class="btn btn-warning btn-sm order-btn" data-id="{{id}}">Re-Order!</button>
                </li>
                {{/if}}
                {{/each}}
            </ol>
        </div>
    </div>
</div>

<br>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3 text-center">
            <h2>Order a Burger</h2>
            <form>
                <div class="form-group">
                    <label id="input-label" for="add-burger-box">Don't see anything you like? Order your own!</label>
                    <input type="text" class="form-control" id="add-burger-box" placeholder="Enter a burger name"><br>
                    <label for="devoured">What is the status of the burger?</label><br>
                    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                    <input type="radio" name="devoured" value="0"> Hot'n Fresh!<br><br>
                    <button type="submit" id="submit-burger" class="btn btn-primary">Order Burger</button>
            </form>
        </div>
    </div>
</div>