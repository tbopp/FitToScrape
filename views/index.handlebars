<div class="container-fluid">
    <div class="row">
        <div class="col-md-10 col-sm-4 offset-md-1">
            <h2>Latest Articles</h2>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Article Title</th>
                        <th>Article Link</th>
                        <th>Article Notes</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each articles}}
                    <tr>
                        <td>
                            <p data-id={{this._id}}>{{this.title}}</p>
                        </td>
                        <td><a href="{{this.link}}" target="_blank">Read it!</a></td>
                        <td>
                            <button class="btn btn-primary view-notes" type="button" data-id={{this._id}}>
                                View Notes
                            </button>
                            <div class="card card-body notes-b" data-id={{this._id}}>
                                <p><b>ID:</b>{{this._id}}
                                    <b>Notes:</b>{{this.note}}</p>
                            </div>
                    </tr>
                    </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>

        </div>
    </div>
</div>